#include <iostream>

int main() {
    int n;

    std::cout << "Enter the number of rows: ";
    std::cin >> n;

    for (int i = 1; i <= n; ++i) {
       
        for (int j = i; j <= i * 2 - 1; ++j) {
            std::cout << j;
        }

     
        for (int j = i * 2 - 2; j >= i; --j) {
            std::cout << j;
        }

        std::cout << std::endl;
    }

    return 0;
}
